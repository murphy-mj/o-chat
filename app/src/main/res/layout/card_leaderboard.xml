<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="49dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/no_achieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_name"
            android:layout_alignStart="@+id/group_name"
            android:layout_alignEnd="@+id/group_name"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="7dp"
            android:text="TextView"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/time_taken"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_achieved"
            android:layout_alignStart="@+id/no_achieved"
            android:layout_alignEnd="@+id/no_achieved"
            android:layout_alignParentBottom="false"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="7dp"
            android:text="TextView"
            android:textSize="10sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
