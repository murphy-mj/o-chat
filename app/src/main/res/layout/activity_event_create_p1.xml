<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1FCC26"
    tools:context=".activities.EventCreateActivity">

    <EditText
        android:id="@+id/eventNameC"
        android:layout_width="312dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Event Name"
        android:includeFontPadding="false"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eventDescription"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Description of the Event"
        android:inputType="text|textLongMessage"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/eventNameC"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eventNameC"
        app:layout_constraintTop_toBottomOf="@+id/eventNameC" />


    <EditText
        android:id="@+id/publicEventCode"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Public Event code XXXXX2020"
        android:inputType="text|textLongMessage"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/eventDescription"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eventDescription"
        app:layout_constraintTop_toBottomOf="@+id/eventDescription" />




    <Button
        android:id="@+id/event_add_btn"
        android:layout_width="235dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:text="Add Event"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/publicEventCode"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="@+id/publicEventCode"
        app:layout_constraintTop_toBottomOf="@+id/publicEventCode" />


</androidx.constraintlayout.widget.ConstraintLayout>